{
  "name": "traitors-ai",
  "version": "0.1.0",
  "description": "A social deduction game built with React, Express, and Socket.io",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "dev": "concurrently --names 'frontend,backend' 'npm run dev --workspace=packages/frontend' 'npm run dev --workspace=packages/backend'",
    "dev:shared": "npm run dev --workspace=packages/shared",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=packages/frontend && npm run build --workspace=packages/backend",
    "start": "npm run start --workspace=packages/backend",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
